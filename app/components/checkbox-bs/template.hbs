<div class="row">
  <div class="col-lg-6">
    {{#bs-button-group value=buttonGroupValue type="checkbox" onChange=(action (mut buttonGroupValue)) as |bg|}}
      {{#bg.button class="btn-dark" value=1}}1{{/bg.button}}
      {{#bg.button class="btn-info" value=2}}2{{/bg.button}}
      {{#bg.button class="btn-warning" value=3}}3{{/bg.button}}
      {{#bg.button class="btn-light" value=4}}4{{/bg.button}}
    {{/bs-button-group}}
  </div>
  <div class="col-lg-6">
    <p>
      <span class="label-setting" data-separator=": ">You selected</span>
      <span class="label-setting" data-separator=", ">{{buttonGroupValue}}</span>
    </p>
  </div>
</div>

{{yield}}